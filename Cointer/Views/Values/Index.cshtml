@model IEnumerable<Cointer.Models.Value>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cents)
                </th>
                <th>
                    Add Coin
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cents)
            </td>
            <td>
                <form asp-controller="Coins" asp-action="Create">
                    <div class="form-group">
                        <input type="hidden" name="ValueID" value="@item.ValueID" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ValueID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ValueID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ValueID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
